{
  final byte[][] inf=array.inflated;
  if (inf == null) {
    buffer.put((byte)0);
    buffer.put(array.fill);
  }
 else {
    buffer.put((byte)1);
    final int sizeY=array.getSizeY(), rowSize=array.rowSize();
    final byte[] def=array.deflated;
    for (int y=0; y < sizeY; y++) {
      final byte[] row=inf[y];
      if (row == null) {
        buffer.put((byte)0);
        buffer.put(def[y]);
      }
 else {
        buffer.put((byte)1);
        buffer.put(row,0,rowSize);
      }
    }
  }
}

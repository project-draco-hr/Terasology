{
  if (_newMesh != null) {
    for (    Chunk nc : loadOrCreateNeighbors()) {
      if (nc.isDirty()) {
        return;
      }
    }
    if (_newMesh.isGenerated()) {
      ChunkMesh oldMesh=_activeMesh;
      if (oldMesh != null)       oldMesh.dispose();
      _activeMesh=_newMesh;
      _newMesh=null;
    }
  }
}

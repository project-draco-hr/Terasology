{
  if (c != null) {
    c.generate();
    Chunk[] neighbors=c.loadOrCreateNeighbors();
    for (int i=0; i < neighbors.length; i++) {
      if (neighbors[i] != null) {
        neighbors[i].generate();
      }
    }
    if (c.isLightDirty()) {
      c.updateLight();
    }
    if (c.isDirty() && !c.isLightDirty() && !c.isFresh()) {
      c.generateMesh();
      _vboUpdates.add(c);
    }
  }
}

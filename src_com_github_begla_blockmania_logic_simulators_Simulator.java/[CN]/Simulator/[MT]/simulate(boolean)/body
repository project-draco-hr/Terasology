{
  long currentTime=Blockmania.getInstance().getTime();
  if ((currentTime > _lastUpdate + _updateInterval || force) && !_running) {
    _running=true;
    Runnable r=new Runnable(){
      public void run(){
        executeSimulation();
        _running=false;
      }
    }
;
    Blockmania.getInstance().getThreadPool().execute(r);
    _lastUpdate=currentTime;
    return true;
  }
  return false;
}

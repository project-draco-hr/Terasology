{
  return new BindTarget(category,description){
    public void start(){
      if (downEvent != null) {
        downEvent.reset();
        eventSystem.send(localPlayerRef,downEvent);
      }
    }
    public void end(){
      if (upEvent != null) {
        upEvent.reset();
        eventSystem.send(localPlayerRef,upEvent);
      }
    }
    public void repeat(){
      if (repeatEvent != null) {
        repeatEvent.reset();
        eventSystem.send(localPlayerRef,repeatEvent);
      }
    }
  }
;
}

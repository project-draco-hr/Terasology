{
  if (norm.x == 1.0f || norm.x == -1.0f) {
    p1.x-=0.0625 * norm.x;
    p2.x-=0.0625 * norm.x;
    p3.x-=0.0625 * norm.x;
    p4.x-=0.0625 * norm.x;
  }
 else   if (norm.z == 1.0f || norm.z == -1.0f) {
    p1.z-=0.0625 * norm.z;
    p2.z-=0.0625 * norm.z;
    p3.z-=0.0625 * norm.z;
    p4.z-=0.0625 * norm.z;
  }
}

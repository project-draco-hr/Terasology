{
  if (isAlive()) {
    glPushMatrix();
    Vector3d cameraPosition=Terasology.getInstance().getActiveCamera().getPosition();
    glTranslated(_position.x - cameraPosition.x,_position.y - cameraPosition.y,_position.z - cameraPosition.z);
    applyOrientation();
    glScalef(_size,_size,_size);
    renderParticle();
    glPopMatrix();
  }
}

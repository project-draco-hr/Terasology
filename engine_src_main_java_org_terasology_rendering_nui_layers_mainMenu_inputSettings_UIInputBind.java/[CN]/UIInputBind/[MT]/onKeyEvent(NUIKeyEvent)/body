{
  if (event.isDown()) {
    if (capturingInput) {
      setInput(InputType.KEY.getInput(event.getKey().getId()));
      capturingInput=false;
      return true;
    }
 else     if (event.getKey() == Keyboard.Key.DELETE || event.getKey() == Keyboard.Key.BACKSPACE) {
      setInput(null);
      return true;
    }
  }
  return false;
}

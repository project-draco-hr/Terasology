{
  if (button == 0 && state && !_mouseUp) {
    _mouseDown=true;
    _mouseUp=false;
    _clickSoundPlayed=false;
  }
 else   if (button == 0 && !state && _mouseDown) {
    _mouseUp=true;
    _mouseDown=false;
  }
  if (wheelMoved != 0) {
    _wheelMoved=wheelMoved;
  }
 else {
    _wheelMoved=0;
  }
}

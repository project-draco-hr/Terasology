{
  Method method=specificMethod.getAccessibleObject();
  CommandDefinition commandAnnotation=method.getAnnotation(CommandDefinition.class);
  Preconditions.checkNotNull(commandAnnotation);
  String name=commandAnnotation.value();
  if (name.length() <= 0) {
    name=method.getName();
  }
  return new ReferencedCommand(name,commandAnnotation.requiredPermission(),commandAnnotation.runOnServer(),commandAnnotation.shortDescription(),commandAnnotation.helpText(),specificMethod);
}

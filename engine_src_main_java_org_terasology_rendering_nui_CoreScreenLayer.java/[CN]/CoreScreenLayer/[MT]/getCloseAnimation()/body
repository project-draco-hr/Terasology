{
  sizeAnim=new Animation();
  Frame frm=new Frame();
  frm.addComponent(new Float(0),new Float(1),new FloatInterpolator(){
    public void setValue(    Object value){
      float v=((Float)value).floatValue();
      animRegion=Rect2i.createFromMinAndMax((int)(animCanvasSize.maxX() * v),animCanvasSize.minY(),(int)(animCanvasSize.maxX() * (v + 1)),animCanvasSize.maxY());
    }
  }
,new AccelerateInterpolator());
  frm.setDuration(.75f);
  frm.setRepeatCount(1);
  sizeAnim.addFrame(frm);
  sizeAnim.setRepeatCount(1);
  sizeAnim.setRepeatMode(RepeatMode.RUN_ONCE);
  sizeAnim.addListener(new AnimationListener(){
    @Override public void onStart(){
      animCanvasSize=animRegion;
    }
    @Override public void onEnd(){
      sizeAnim=null;
      animRegion=null;
      animCanvasSize=null;
    }
  }
);
  return sizeAnim;
}

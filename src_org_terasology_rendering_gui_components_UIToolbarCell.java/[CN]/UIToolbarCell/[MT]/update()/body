{
  _selectionRectangle.setVisible(_selected);
  setPosition(new Vector2f((getSize().x - 8f) * _id - 2f,2f));
  Toolbar toolbar=Terasology.getInstance().getActiveWorldRenderer().getPlayer().getToolbar();
  if (toolbar.getSelectedSlot() == _id) {
    setSelected(true);
  }
 else {
    setSelected(false);
  }
  displayItemCount();
}

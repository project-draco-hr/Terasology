{
  this.entity=entity;
  this.relevanceDistance.set(relevanceDistance);
  LocationComponent loc=entity.getComponent(LocationComponent.class);
  if (loc == null) {
    dirty=false;
  }
 else {
    center.set(TeraMath.calcChunkPos(loc.getWorldPosition()));
    region=calculateRegion();
    dirty=true;
  }
}

{
  if (Terasology.getInstance().getTimeInMs() - lastInteraction < 200) {
    return;
  }
  if (Mouse.isButtonDown(0) || button == 0) {
    lastInteraction=Terasology.getInstance().getTimeInMs();
  }
 else   if (Mouse.isButtonDown(1) || button == 1) {
    removeBlock(true);
    lastInteraction=Terasology.getInstance().getTimeInMs();
  }
}

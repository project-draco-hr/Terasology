{
  if (networkSystem.getMode().isAuthority()) {
    InventoryComponent inventory=entity.getComponent(InventoryComponent.class);
    for (    EntityRef content : inventory.itemSlots) {
      if (content != entity) {
        content.destroy();
      }
 else {
        logger.warn("Inventory contained itself: {}",entity);
      }
    }
  }
}

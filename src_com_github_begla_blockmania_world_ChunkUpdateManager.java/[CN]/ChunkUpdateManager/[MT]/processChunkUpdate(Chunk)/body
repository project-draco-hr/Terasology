{
  if (c != null) {
    if (!c.isDirty() && !c.isFresh() && !c.isLightDirty()) {
      return;
    }
    c.generate();
    Chunk[] neighbors=c.loadOrCreateNeighbors();
    for (    Chunk neighbor : neighbors) {
      if (neighbor != null) {
        neighbor.generate();
      }
    }
    if (c.isLightDirty()) {
      c.updateLight();
    }
    if (c.isDirty()) {
      c.generateMesh();
      _displayListUpdates.add(c);
    }
  }
}

{
  TranslationUri uri=new TranslationUri(id);
  if (uri.isValid()) {
    TranslationProject project=getProject(uri.getProjectUri());
    if (project != null) {
      return project.translate(uri.getId(),otherLocale);
    }
 else {
      logger.warn("Invalid project for '{}'",id);
    }
  }
  return Optional.empty();
}

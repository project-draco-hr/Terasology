{
  if (_newMesh != null) {
    for (    Chunk nc : loadOrCreateNeighbors())     if ((nc.isDirty() || nc.isLightDirty()) && nc.isChunkInFrustum())     return;
    if (_newMesh.isGenerated() && !isDirty() && !isFresh()&& !isLightDirty()) {
      ChunkMesh oldMesh=_activeMesh;
      if (oldMesh != null)       oldMesh.disposeMesh();
      _activeMesh=_newMesh;
      _newMesh=null;
    }
  }
}

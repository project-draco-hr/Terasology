{
  updateGraphicsElementsPosition();
  Vector2f mousePos=new Vector2f(Mouse.getX(),Display.getHeight() - Mouse.getY());
  if (intersects(mousePos)) {
    if (_mouseDown) {
      _scrolled=true;
      if (_prevMousePos == null) {
        _prevMousePos=mousePos;
      }
    }
  }
  if (_scrolled) {
    scrolled(mousePos);
  }
  if (!_mouseDown || !_scrolled || _mouseUp) {
    _scrolled=false;
    _mouseDown=false;
    _prevMousePos=null;
    _mouseUp=false;
  }
}

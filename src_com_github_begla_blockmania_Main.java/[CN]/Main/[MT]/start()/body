{
  while (!Keyboard.isKeyDown(Keyboard.KEY_ESCAPE)) {
    processKeyboard();
    processMouse();
    Display.sync(60);
    long delta=Helper.getInstance().getTime() - lastLoopTime;
    lastLoopTime=Helper.getInstance().getTime();
    lastFpsTime+=delta;
    fps++;
    if (lastFpsTime >= 1000) {
      lastFpsTime=0;
      meanFps+=fps;
      meanFps/=2;
      fps=0;
    }
    update(delta);
    render();
    Display.update();
  }
  Display.destroy();
}

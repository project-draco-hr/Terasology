{
  if (getTime() < 0.1f && getTime() > 0.0f) {
    _daylight=getTime() / 0.1f;
  }
 else   if (getTime() >= 0.1 && getTime() <= 0.5f) {
    _daylight=1.0f;
  }
  if (getTime() > 0.5f && getTime() < 0.6f) {
    _daylight=1.0f - (getTime() - 0.5f) / 0.1f;
  }
 else   if (getTime() >= 0.6f && getTime() <= 1.0f) {
    _daylight=0.0f;
  }
}

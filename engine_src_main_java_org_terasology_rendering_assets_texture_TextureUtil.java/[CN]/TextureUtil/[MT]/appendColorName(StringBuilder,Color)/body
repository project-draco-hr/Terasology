{
  int red=color.r();
  if (red < 16) {
    sb.append('0');
  }
  sb.append(Integer.toHexString(red));
  int green=color.g();
  if (green < 16) {
    sb.append('0');
  }
  sb.append(Integer.toHexString(green));
  int blue=color.b();
  if (blue < 16) {
    sb.append('0');
  }
  sb.append(Integer.toHexString(blue));
  int alpha=color.a();
  if (alpha < 16) {
    sb.append('0');
  }
  sb.append(Integer.toHexString(alpha));
}

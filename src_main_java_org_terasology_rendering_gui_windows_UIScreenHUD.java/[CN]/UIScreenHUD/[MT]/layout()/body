{
  super.layout();
  if (leftGearWheel != null && rightGearWheel != null) {
    leftGearWheel.setPosition(new Vector2f(toolbar.getPosition().x - leftGearWheel.getSize().x / 2,toolbar.getPosition().y));
    rightGearWheel.setPosition(new Vector2f(toolbar.getPosition().x + toolbar.getSize().x - rightGearWheel.getSize().x / 2,toolbar.getPosition().y));
  }
}

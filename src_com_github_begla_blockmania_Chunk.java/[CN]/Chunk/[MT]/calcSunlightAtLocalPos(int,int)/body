{
  if (x < 0 || z < 0 || x >= CHUNK_DIMENSIONS.x || z >= CHUNK_DIMENSIONS.z) {
    return;
  }
  boolean covered=false;
  for (int y=(int)CHUNK_DIMENSIONS.y - 1; y > 0; y--) {
    if (_blocks[x][y][z] == 0 && !covered) {
      _light[x][y][z]=MAX_LIGHT;
    }
 else     if (_blocks[x][y][z] == 0 && covered) {
      _light[x][y][z]=0.0f;
    }
 else {
      covered=true;
    }
  }
}

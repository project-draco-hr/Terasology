{
  lock.lock();
  try {
    if (!disposed) {
      for (int i=0; i < vertexBuffers.length; i++) {
        int id=vertexBuffers[i];
        GL15.glDeleteBuffers(id);
        vertexBuffers[i]=0;
        id=idxBuffers[i];
        GL15.glDeleteBuffers(id);
        idxBuffers[i]=0;
      }
      disposed=true;
      vertexElements=null;
    }
  }
  finally {
    lock.unlock();
  }
}

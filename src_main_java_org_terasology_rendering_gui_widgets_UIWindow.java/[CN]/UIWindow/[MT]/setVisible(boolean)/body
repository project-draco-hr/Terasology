{
  if (visible && !isVisible()) {
    notifyWindowListeners(eWindowEvent.OPEN);
    setFocus(null);
    clearInputControls();
  }
 else   if (!visible && isVisible()) {
    notifyWindowListeners(eWindowEvent.CLOSE);
  }
  super.setVisible(visible);
  if (visible) {
    setFocus(null);
    clearInputControls();
  }
 else {
    setFocus(this);
  }
  GUIManager.getInstance().checkMouseMovement();
}

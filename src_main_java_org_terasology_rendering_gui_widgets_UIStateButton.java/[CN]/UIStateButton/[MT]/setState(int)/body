{
  if (states.size() > 0) {
    if (stateID < 0)     stateID=0;
    if (stateID >= states.size())     stateID=states.size() - 1;
    getLabel().setText(states.get(stateID).name);
    currentState=stateID;
    if (states.get(stateID).action != null)     states.get(stateID).action.action(this);
  }
}

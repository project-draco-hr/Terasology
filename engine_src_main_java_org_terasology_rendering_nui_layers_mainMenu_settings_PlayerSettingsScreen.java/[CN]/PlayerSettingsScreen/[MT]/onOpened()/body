{
  super.onOpened();
  if (nametext != null) {
    nametext.setText(config.getPlayer().getName());
  }
  if (slider != null) {
    Color color=config.getPlayer().getColor();
    slider.bindValue(new NotifyingBinding(findClosestIndex(color)));
  }
  if (language != null) {
    language.setSelection(config.getSystem().getLocale());
  }
  updateImage();
}

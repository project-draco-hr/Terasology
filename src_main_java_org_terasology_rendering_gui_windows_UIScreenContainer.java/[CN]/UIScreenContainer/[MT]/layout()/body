{
  super.layout();
  if (leftGearWheel != null && rightGearWheel != null) {
    leftGearWheel.setPosition(new Vector2f(playerToolbar.getPosition().x - leftGearWheel.getSize().x / 2,playerToolbar.getPosition().y));
    rightGearWheel.setPosition(new Vector2f(playerToolbar.getPosition().x + playerToolbar.getSize().x - rightGearWheel.getSize().x / 2,playerToolbar.getPosition().y));
  }
  if (playerInventory != null) {
    playerInventory.setPosition(new Vector2f(Display.getWidth() / 2 - playerInventory.getSize().x / 2,playerInventory.getPosition().y));
  }
  if (containerInventory != null) {
    containerInventory.setPosition(new Vector2f(0f,Display.getHeight() - 212f - containerInventory.getSize().y));
  }
}

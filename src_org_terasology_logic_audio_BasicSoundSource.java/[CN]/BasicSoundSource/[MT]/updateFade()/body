{
  if (!fade) {
    return;
  }
  float delta=(this.srcGain - this.targetGain) / 100;
  System.out.println("Fading " + this.audio.getName());
  this.setGain(this.getGain() - delta);
  if (this.getGain() >= this.targetGain) {
    if (this.targetGain == 0.0f) {
      this.stop();
    }
    fade=false;
  }
}

{
  int largestWidth=0;
  int currentWidth=0;
  for (  char c : text.toCharArray()) {
    if (c == '\n') {
      largestWidth=Math.max(largestWidth,currentWidth);
      currentWidth=0;
    }
 else {
      FontCharacter character=charMap.get(c);
      if (character != null) {
        currentWidth+=character.getxAdvance();
      }
    }
  }
  return Math.max(largestWidth,currentWidth);
}

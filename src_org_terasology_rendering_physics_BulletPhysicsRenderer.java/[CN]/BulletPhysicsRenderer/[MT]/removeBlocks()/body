{
  if (_blocks.size() > 0) {
    for (int i=_blocks.size() - 1; i >= 0; i--) {
      if (!_blocks.get(i).isActive()) {
        _discreteDynamicsWorld.removeRigidBody(_blocks.get(i));
        _blocks.remove(i);
      }
    }
    while (_blocks.size() > 128) {
      _discreteDynamicsWorld.removeRigidBody(_blocks.remove(0));
    }
  }
}

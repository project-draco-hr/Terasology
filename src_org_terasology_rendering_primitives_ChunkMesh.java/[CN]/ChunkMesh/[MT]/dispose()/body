{
  if (_disposed)   return;
synchronized (this) {
    for (int i=0; i < _vertexBuffers.length; i++) {
      int id=_vertexBuffers[i];
      VertexBufferObjectManager.getInstance().putVboId(id);
      _vertexBuffers[i]=0;
      id=_idxBuffers[i];
      VertexBufferObjectManager.getInstance().putVboId(id);
      _idxBuffers[i]=0;
    }
    _disposed=true;
    _vertexElements=null;
    _indexedMesh=null;
  }
}

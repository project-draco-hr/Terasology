{
  if (_blocks.isEmpty()) {
    return -1;
  }
  int xMax=Integer.MIN_VALUE;
  int xMin=Integer.MAX_VALUE;
  for (  BlockPosition pos : _blocks.keySet()) {
    if (pos.x > xMax) {
      xMax=pos.x;
    }
    if (pos.x < xMin) {
      xMin=pos.x;
    }
  }
  return Math.abs(xMax) - Math.abs(xMin) + 1;
}

{
  super.layout();
  if (inventory != null) {
    background.center();
    inventory.center();
    inventory.getPosition().y+=48;
    if (inventory.getCells().size() >= 9) {
      float toolbarPos=calcAbsolutePosition().y + 208;
      for (int i=0; i < 9; i++) {
        inventory.getCells().get(i).getPosition().y=toolbarPos;
      }
    }
  }
}

{
  while (!Display.isCloseRequested() && !Keyboard.isKeyDown(Keyboard.KEY_ESCAPE)) {
    if (Display.isVisible()) {
      processKeyboard();
      processMouse();
      update();
      render();
    }
 else {
      if (Display.isDirty()) {
        render();
      }
      try {
        Thread.sleep(100);
      }
 catch (      InterruptedException ex) {
      }
    }
    Display.update();
  }
}

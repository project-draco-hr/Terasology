{
  while (!Display.isCloseRequested()) {
    processKeyboard();
    processMouse();
    Display.sync(60);
    long delta=getTime() - lastLoopTime;
    lastLoopTime=getTime();
    lastFpsTime+=delta;
    fps++;
    if (lastFpsTime >= 1000) {
      Display.setTitle(GAME_TITLE + " (FPS: " + fps+ ")");
      lastFpsTime=0;
      fps=0;
    }
    update(delta);
    render();
    Display.update();
  }
  Display.destroy();
}

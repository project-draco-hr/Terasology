{
  if (_velocity.x > _targetVelocity.x)   _velocity.x-=_velDecSpeed.x;
  if (_velocity.x < _targetVelocity.x)   _velocity.x+=_velDecSpeed.x;
  if (_velocity.y > _targetVelocity.y)   _velocity.y-=_velDecSpeed.y;
  if (_velocity.y < _targetVelocity.y)   _velocity.y+=_velDecSpeed.y;
  if (_velocity.z > _targetVelocity.z)   _velocity.z-=_velDecSpeed.z;
  if (_velocity.z < _targetVelocity.z)   _velocity.z+=_velDecSpeed.z;
}

{
  float clampedValue=value;
  if (minValue < 0) {
    clampedValue+=-minValue;
  }
 else {
    clampedValue-=minValue;
  }
  float pos=clampedValue * ((getSize().x - slider.getSize().x) / (float)range);
  if (pos < 0) {
    pos=0;
  }
 else   if (pos > getSize().x) {
    pos=getSize().x;
  }
  return pos;
}

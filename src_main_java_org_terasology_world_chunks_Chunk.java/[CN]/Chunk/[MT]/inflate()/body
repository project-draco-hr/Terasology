{
  lock();
  try {
    if (!(blockData instanceof TeraDenseArray8Bit))     blockData=new TeraDenseArray8Bit(blockData);
    if (!(sunlightData instanceof TeraDenseArray4Bit))     sunlightData=new TeraDenseArray4Bit(sunlightData);
    if (!(lightData instanceof TeraDenseArray4Bit))     lightData=new TeraDenseArray4Bit(lightData);
    if (!(extraData instanceof TeraDenseArray4Bit))     extraData=new TeraDenseArray4Bit(extraData);
  }
  finally {
    unlock();
  }
}

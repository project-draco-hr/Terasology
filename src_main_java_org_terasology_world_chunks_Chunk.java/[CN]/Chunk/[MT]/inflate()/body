{
  lock();
  try {
    if (!(blocks instanceof TeraDenseArray8Bit))     blocks=new TeraDenseArray8Bit(blocks);
    if (!(sunlight instanceof TeraDenseArray4Bit))     sunlight=new TeraDenseArray4Bit(sunlight);
    if (!(light instanceof TeraDenseArray4Bit))     light=new TeraDenseArray4Bit(light);
    if (!(liquid instanceof TeraDenseArray4Bit))     liquid=new TeraDenseArray4Bit(liquid);
  }
  finally {
    unlock();
  }
}

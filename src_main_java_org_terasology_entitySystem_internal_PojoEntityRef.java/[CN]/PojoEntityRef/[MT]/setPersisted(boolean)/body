{
  if (exists()) {
    EntityInfoComponent info=getComponent(EntityInfoComponent.class);
    if (info == null) {
      info=new EntityInfoComponent();
      info.persisted=persisted;
      addComponent(info);
    }
 else     if (info.persisted != persisted) {
      info.persisted=persisted;
      saveComponent(info);
    }
  }
}

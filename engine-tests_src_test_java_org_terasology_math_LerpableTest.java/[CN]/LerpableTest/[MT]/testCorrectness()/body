{
  Random random=new Random(12368);
  for (int i=0; i < 1000; i++) {
    double x1=(random.nextDouble() - 0.5) * random.nextInt(1000000), y1=(random.nextDouble() - 0.5) * random.nextInt(1000000), p=(random.nextDouble() - 0.5) * random.nextInt(1000000);
    LerpableDouble x2=new LerpableDouble(x1), y2=new LerpableDouble(y1);
    assertEquals(lerp(x1,y1,p),lerp(x2,y2,p).value,0);
  }
}

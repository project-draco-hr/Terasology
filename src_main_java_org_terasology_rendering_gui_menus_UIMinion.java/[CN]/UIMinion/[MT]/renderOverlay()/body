{
  glPushMatrix();
  glLoadIdentity();
  glColor4f(0,0,0,0.75f);
  glBegin(GL_QUADS);
  glVertex2f((float)Display.getWidth() - 150,(float)(Display.getHeight() / 2) - 96);
  glVertex2f((float)Display.getWidth() - 50,(float)(Display.getHeight() / 2) - 96);
  glVertex2f((float)Display.getWidth() - 50,(float)(Display.getHeight() / 2) + 96);
  glVertex2f((float)Display.getWidth() - 150,(float)(Display.getHeight() / 2) + 96);
  glEnd();
  glPopMatrix();
}

  this.saveThreadManager=TaskMaster.createFIFOTaskMaster("Saving",1);
  this.config=CoreRegistry.get(Config.class);
  this.entitySetDeltaRecorder=new EntitySetDeltaRecorder(entityManager.getComponentLibrary());
}

{
  if (!items.isEmpty()) {
    int itemWidth=canvas.size().x / items.size();
    for (int i=0; i < items.size(); ++i) {
      int xOffset=i * canvas.size().x / items.size();
      Rect2i region=Rect2i.createFromMinAndSize(xOffset + padding.getLeft(),yOffset + padding.getTop(),itemWidth - padding.getTotalWidth(),height - padding.getTotalHeight());
      canvas.drawElement(items.get(i),region);
    }
  }
}

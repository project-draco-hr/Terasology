{
switch (mode) {
case LISTEN_SERVER:
case DEDICATED_SERVER:
    int total=0;
  for (  NetClient client : netClientList) {
    total+=client.getMetrics().getReceivedBytesSinceLastCall();
  }
return total;
case CLIENT:
if (server != null) {
return server.getMetrics().getReceivedBytesSinceLastCall();
}
default :
return 0;
}
}

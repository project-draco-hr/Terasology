{
  assertEquals("input " + currentPowerOfTwo,currentPowerOfTwo,TeraMath.ceilPowerOfTwo(currentPowerOfTwo));
  int expectedValue=(currentPowerOfTwo == 1) ? 0 : (currentPowerOfTwo == 2) ? 1 : currentPowerOfTwo;
  assertEquals("input " + currentPowerOfTwo + " - 1",expectedValue,TeraMath.ceilPowerOfTwo(currentPowerOfTwo - 1));
  assertEquals("input " + currentPowerOfTwo + " + 1",nextPowerOfTwo,TeraMath.ceilPowerOfTwo(currentPowerOfTwo + 1));
}

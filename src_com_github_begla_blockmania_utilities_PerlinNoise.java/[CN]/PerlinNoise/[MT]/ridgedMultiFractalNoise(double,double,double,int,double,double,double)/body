{
  double frequency=1f;
  double signal=1f;
  signal=ridge(noise(x,y,z),offset);
  double result=signal;
  double weight=1f;
  for (int i=0; i < octaves; i++) {
    x*=lacunarity;
    y*=lacunarity;
    z*=lacunarity;
    weight=gain * signal;
    if (weight > 1.0f) {
      weight=1.0f;
    }
 else     if (weight < 0.0f) {
      weight=0.0f;
    }
    signal=ridge(noise(x,y,z),offset);
    signal*=weight;
    result+=signal * Math.pow(frequency,-1f);
    frequency*=lacunarity;
  }
  return result;
}

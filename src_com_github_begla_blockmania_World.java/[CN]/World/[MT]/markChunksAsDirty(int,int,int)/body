{
  try {
    _chunks[x][y][z].markDirty();
  }
 catch (  Exception e) {
  }
  try {
    _chunks[x + 1][y][z].markDirty();
  }
 catch (  Exception e) {
  }
  try {
    _chunks[x - 1][y][z].markDirty();
  }
 catch (  Exception e) {
  }
  try {
    _chunks[x][y][z + 1].markDirty();
  }
 catch (  Exception e) {
  }
  try {
    _chunks[x][y][z - 1].markDirty();
  }
 catch (  Exception e) {
  }
}

{
  if (c != null) {
    if (!c.generate() && c._dirty) {
      c.calcLight();
    }
    Chunk[] neighbors=c.getNeighbors();
    for (    Chunk nc : neighbors) {
      if (nc != null) {
        if (!nc.generate() && nc._dirty) {
          nc.calcLight();
        }
        if (nc._dirty) {
          nc.generateVertexArrays();
          nc._dirty=false;
          _chunkUpdateQueueDL.add(nc);
        }
      }
    }
    if (c._dirty) {
      c.generateVertexArrays();
      c._dirty=false;
      _chunkUpdateQueueDL.add(c);
    }
  }
}

{
  _lock.lock();
  try {
    if (_disposed)     return;
    if (_activeMeshes != null)     for (int i=0; i < _activeMeshes.length; i++)     _activeMeshes[i].dispose();
    if (_newMeshes != null) {
      for (int i=0; i < _newMeshes.length; i++)       _newMeshes[i].dispose();
    }
    _disposed=true;
    _activeMeshes=null;
    _newMeshes=null;
  }
  finally {
    _lock.unlock();
  }
}

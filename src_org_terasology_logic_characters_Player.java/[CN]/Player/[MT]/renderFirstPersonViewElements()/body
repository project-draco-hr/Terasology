{
  if (!RENDER_FIRST_PERSON_VIEW) {
    return;
  }
  glPushMatrix();
  glLoadIdentity();
  glClear(GL_DEPTH_BUFFER_BIT);
  getActiveCamera().loadProjectionMatrix(75f);
  if (getActiveItem() != null) {
    getActiveItem().renderFirstPersonView(this);
  }
 else {
    renderHand();
  }
  glPopMatrix();
}

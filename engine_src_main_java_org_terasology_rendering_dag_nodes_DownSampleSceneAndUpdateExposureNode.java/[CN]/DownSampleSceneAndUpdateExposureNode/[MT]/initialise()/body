  requiresFBO(new FBOConfig(SCENE_1,1,1,FBO.Type.DEFAULT),immutableFBOs);
  requiresFBO(new FBOConfig(SCENE_PRE_POST,FULL_SCALE,FBO.Type.HDR),displayResolutionDependentFBOs);
  obtainStaticFBOs();
  createPBOs();
}

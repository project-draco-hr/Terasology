{
  if (isAlive()) {
    glPushMatrix();
    Vector3d playerPosition=Terasology.getInstance().getActivePlayer().getPosition();
    glTranslated(_position.x - playerPosition.x,_position.y - playerPosition.y,_position.z - playerPosition.z);
    applyOrientation();
    glScalef(_size,_size,_size);
    renderParticle();
    glPopMatrix();
  }
}

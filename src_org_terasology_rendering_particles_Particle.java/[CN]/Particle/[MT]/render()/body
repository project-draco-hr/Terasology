{
  if (isAlive()) {
    glPushMatrix();
    Vector3d r=getParent().getParent().getWorldProvider().getRenderingReferencePoint();
    glTranslated(_position.x - r.x,_position.y - r.y,_position.z - r.z);
    applyOrientation();
    glScalef(_size,_size,_size);
    renderParticle();
    glPopMatrix();
  }
}

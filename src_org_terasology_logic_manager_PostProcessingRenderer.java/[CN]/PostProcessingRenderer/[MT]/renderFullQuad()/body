{
  glMatrixMode(GL_MODELVIEW);
  glPushMatrix();
  glLoadIdentity();
  glMatrixMode(GL_PROJECTION);
  glPushMatrix();
  glLoadIdentity();
  glBegin(GL_QUADS);
  glColor4f(1.0f,1.0f,1.0f,1.0f);
  glTexCoord2d(0.0,0.0);
  glVertex3i(-1,-1,-1);
  glTexCoord2d(1.0,0.0);
  glVertex3i(1,-1,-1);
  glTexCoord2d(1.0,1.0);
  glVertex3i(1,1,-1);
  glTexCoord2d(0.0,1.0);
  glVertex3i(-1,1,-1);
  glEnd();
  glPopMatrix();
  glMatrixMode(GL_MODELVIEW);
  glPopMatrix();
}

{
  int chunkUpdates=0;
  while (chunkUpdateQueueDL.size() > 0) {
    if (chunkUpdates < 4) {
      Chunk c=null;
synchronized (chunkUpdateQueueDL) {
        c=chunkUpdateQueueDL.element();
      }
      c.generateDisplayList();
synchronized (chunkUpdateQueueDL) {
        chunkUpdateQueueDL.remove(c);
      }
      chunkUpdates++;
    }
 else {
      break;
    }
  }
}

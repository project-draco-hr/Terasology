{
  try {
    CoreRegistry.get(NetworkSystem.class).host(TerasologyConstants.DEFAULT_PORT,dedicated);
  }
 catch (  HostingFailedException e) {
    CoreRegistry.get(NUIManager.class).pushScreen(MessagePopup.ASSET_URI,MessagePopup.class).setMessage("Failed to Host",e.getMessage() + " - Reverting to single player");
  }
  return true;
}

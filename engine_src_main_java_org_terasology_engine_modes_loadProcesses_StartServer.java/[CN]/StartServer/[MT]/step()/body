{
  try {
    CoreRegistry.get(NetworkSystem.class).host(netMode,TerasologyConstants.DEFAULT_PORT);
  }
 catch (  HostingFailedException e) {
    CoreRegistry.get(NUIManager.class).pushScreen("engine:errorMessagePopup",ErrorMessagePopup.class).setError("Failed to Host",e.getMessage() + " - Reverting to single player");
  }
  return true;
}

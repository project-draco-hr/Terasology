{
  if (event.getState() == ButtonState.DOWN) {
    if (!editorVisible) {
      nuiManager.toggleScreen("engine:behaviorEditorScreen");
      event.consume();
      editorVisible=true;
      Mouse.setGrabbed(false);
    }
 else {
      nuiManager.toggleScreen("engine:behaviorEditorScreen");
      event.consume();
      editorVisible=false;
      Mouse.setGrabbed(true);
    }
  }
}

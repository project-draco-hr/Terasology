{
  if (!_pauseGame && !_hud.getDebugConsole().isVisible() && !_pauseMenu.isVisible()) {
    if (_worldRenderer != null)     _worldRenderer.update();
    if (!Mouse.isGrabbed())     Mouse.setGrabbed(true);
  }
 else {
    if (Mouse.isGrabbed())     Mouse.setGrabbed(false);
  }
  updateUserInterface();
}

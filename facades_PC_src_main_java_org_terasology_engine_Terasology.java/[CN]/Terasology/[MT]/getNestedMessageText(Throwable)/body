{
  String nl=System.getProperty("line.separator");
  StringBuilder sb=new StringBuilder();
  Throwable cause=t;
  while (cause != null && cause != cause.getCause()) {
    if (cause.getMessage() != null) {
      sb.append(t.getLocalizedMessage());
      sb.append(nl);
    }
    cause=cause.getCause();
  }
  return sb.toString();
}

{
  worldRegion=Rect2i.createFromMinAndMax(targetRegion.minX() - border.x,targetRegion.minZ() - border.z,targetRegion.maxX() + border.x,targetRegion.maxZ() + border.z);
  relativeRegion=Rect2i.createFromMinAndMax(-border.x,-border.z,targetRegion.sizeX() + border.x,targetRegion.sizeZ() + border.z);
}

{
  _gameThread=new Thread(){
    @Override public void run(){
      try {
        _terasology=Terasology.getInstance();
        _terasology.init();
        _terasology.run();
        _terasology.shutdown();
      }
 catch (      Exception e) {
        Terasology.getInstance().getLogger().log(Level.SEVERE,e.toString(),e);
      }
    }
  }
;
  _gameThread.start();
}

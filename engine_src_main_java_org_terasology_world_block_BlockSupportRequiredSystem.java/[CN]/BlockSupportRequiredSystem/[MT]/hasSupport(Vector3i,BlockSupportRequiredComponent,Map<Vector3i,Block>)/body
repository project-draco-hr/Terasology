{
  if (supportComponent.bottomAllowed && hasBlockOnSide(blockPosition,Side.BOTTOM,blockOverrides)) {
    return true;
  }
  if (supportComponent.topAllowed && hasBlockOnSide(blockPosition,Side.TOP,blockOverrides)) {
    return true;
  }
  if (supportComponent.sideAllowed && (hasBlockOnSide(blockPosition,Side.LEFT,blockOverrides) || hasBlockOnSide(blockPosition,Side.RIGHT,blockOverrides) || hasBlockOnSide(blockPosition,Side.FRONT,blockOverrides)|| hasBlockOnSide(blockPosition,Side.BACK,blockOverrides))) {
    return true;
  }
  return false;
}

{
  StringBuilder str=new StringBuilder(text.getText());
  if (reverse) {
    for (int i=index - 1; i >= 0; i--) {
      if (str.charAt(i) == ch && i != index - 1) {
        return i + 1;
      }
 else       if (i == 0) {
        return i;
      }
    }
  }
 else {
    for (int i=index; i < str.length(); i++) {
      if (str.charAt(i) == ch || i == (str.length() - 1)) {
        return i + 1;
      }
    }
  }
  return index;
}

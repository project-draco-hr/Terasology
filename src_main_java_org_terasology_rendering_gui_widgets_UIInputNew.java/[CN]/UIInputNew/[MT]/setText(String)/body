{
  boolean scrollbarVisibility=isScrollbarVisible();
  if (maxLength > 0) {
    if (text.length() > maxLength) {
      text=text.substring(0,maxLength);
    }
  }
  this.text.setText(wrapText(text));
  calcContentHeight();
  if (scrollbarVisibility != isScrollbarVisible()) {
    setText(getText());
  }
  notifyChangedListeners();
  return text.length();
}
